<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center">

        <ImageView
            android:id="@+id/tab_doctor_search_menu_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_dokter_aktif" />

        <com.konsula.app.ui.custom.CustomtextView
            font:name="Label"
            android:id="@+id/tab_doctor_search_menu_title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tab_doctor_search_menu_image_view"
            android:paddingLeft="@dimen/space_10"
            android:text="@string/dokter_tab"
            android:textColor="@color/pink"
            android:textSize="@dimen/text_medium"
            android:textStyle="bold" />
    </RelativeLayout>
</LinearLayout>