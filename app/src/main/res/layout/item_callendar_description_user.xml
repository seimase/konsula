<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/space_10">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="7">

        <com.konsula.app.ui.custom.CustomtextView
            font:name="Content"
            android:id="@+id/doctor_date_item_callendar_description_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="22 Okt 2015"
            android:textColor="@color/textColorBase"
            android:textSize="@dimen/text_size" />

        <com.konsula.app.ui.custom.CustomtextView
            font:name="Header"
            android:id="@+id/doctor_name_item_callendar_description_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="drg. Johannes Ardiant"
            android:textColor="@color/red_deep"
            android:textSize="@dimen/text_size"
            android:textStyle="bold" />



        <com.konsula.app.ui.custom.CustomtextView
            font:name="Content"
            android:id="@+id/doctor_purpose_item_callendar_description_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Pasang Kawat Gigi"
            android:textColor="@color/textColorBase"
            android:textSize="@dimen/text_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="7">

        <com.konsula.app.ui.custom.CustomtextView
            font:name="Content"
            android:id="@+id/doctor_time_item_callendar_description_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="11:30 WIB"
            android:textColor="@color/textColorBase"
            android:textSize="@dimen/text_size" />

        <com.konsula.app.ui.custom.CustomtextView
            font:name="Label"
            android:id="@+id/location_name_item_callendar_description_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="Klinik Pelang"
            android:textColor="@color/textColorBase"
            android:textSize="@dimen/text_size" />



        <TextView
            android:id="@+id/doctor_action_review_item_callendar_description_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text=""
            android:textColor="@color/textColorBase"
            android:textSize="@dimen/text_size"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>
