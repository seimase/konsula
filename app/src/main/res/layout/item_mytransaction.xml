<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:weightSum="10">

    <LinearLayout
        android:id="@+id/item_myhistorytransaction"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/indicator_transaction"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_weight="0.1"
            android:orientation="vertical">


        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_result_detail_profile_linear_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_weight="4"
            android:orientation="vertical"
            android:paddingBottom="@dimen/space_12"
            android:paddingLeft="@dimen/space_5"
            android:paddingTop="@dimen/space_5">

            <com.konsula.app.ui.custom.CustomtextView
                android:id="@+id/item_result_transaction_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/space_14"
                font:name="Content"
                font:type="bold" />

            <com.konsula.app.ui.custom.CustomtextView
                android:id="@+id/item_result_transaction_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/space_3"
                android:layout_marginBottom="@dimen/space_4"
                android:layout_marginTop="@dimen/space_2"
                android:paddingTop="@dimen/space_5"
                android:textColor="@color/black"
                android:textSize="12sp"
                font:name="Content" />

            <com.konsula.app.ui.custom.CustomtextView
                android:id="@+id/item_result_transaction_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_2"
                android:textColor="@color/black"
                android:textSize="12sp"
                font:name="Content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_result_detail_profile_middle_container_linear_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical"
            android:paddingBottom="@dimen/space_5"
            android:paddingTop="@dimen/space_5">

            <com.konsula.app.ui.custom.CustomtextView
                android:id="@+id/item_result_total_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:isIndicator="true"
                android:textColor="@color/black"
                font:name="Label" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:gravity="left"
                android:orientation="horizontal"
                android:paddingTop="@dimen/space_5">

                <com.konsula.app.ui.custom.CustomtextView
                    android:id="@+id/item_result_transaction_total_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:isIndicator="true"
                    android:textColor="@color/black"
                    font:name="Label" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="@dimen/space_2"
                android:gravity="left"
                android:orientation="horizontal">

                <com.konsula.app.ui.custom.CustomtextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginBottom="@dimen/space_2"
                    android:layout_marginRight="@dimen/space_2"
                    android:gravity="right"
                    android:text="Status"
                    android:textColor="@color/black"
                    android:textSize="@dimen/space_16"
                    font:name="Content" />

                <com.konsula.app.ui.custom.CustomtextView
                    android:id="@+id/item_result_transaction_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginBottom="@dimen/space_2"
                    android:layout_marginLeft="@dimen/space_2"
                    android:gravity="right"
                    android:textColor="@color/pink"
                    android:textSize="@dimen/space_16"
                    font:name="Content" />
            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:id="@+id/view_cancel_transaction"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_weight="0.6"
            android:background="@color/grey_xxl"
            android:orientation="vertical">


            <ImageButton
                android:id="@+id/item_cancle_transaction"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:padding="@dimen/space_3"
                android:scaleType="centerInside"
                android:src="@drawable/ic_eye" />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:weightSum="10"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:layout_weight="19"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="0.8"
            android:background="#939597" />
    </LinearLayout>


</LinearLayout>
