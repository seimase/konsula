<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <RelativeLayout
        android:minHeight="?attr/actionBarSize"
        android:id="@+id/about_us_header_container_relative_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/space_10"
        android:background="@color/colorPrimaryDark">

        <ImageButton
            android:id="@+id/teledoc_done_image_button"
            android:layout_width="wrap_content"
            android:paddingTop="@dimen/space_2"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_close" />

        <com.konsula.app.ui.custom.CustomtextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:gravity="center_horizontal"
            android:text="Details"
            android:textColor="@color/white"
            android:textSize="@dimen/toolbar_text_size"
            font:name="Label" />
    </RelativeLayout>
    <ScrollView
        android:layout_below="@+id/about_us_header_container_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@id/about_us_header_container_relative_layout"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/space_20"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <ImageView
                    android:id="@+id/teledoc_avatar_image_view"
                    android:layout_width="@dimen/space_100"
                    android:layout_height="@dimen/space_100"
                    android:layout_centerInParent="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/space_10"
                    android:layout_marginTop="@dimen/space_20" />

            </RelativeLayout>


            <LinearLayout
                android:layout_width="@dimen/booking_info_width"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:weightSum="18">

                    <com.konsula.app.ui.custom.CustomtextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="8"
                        android:text="@string/nama_dokter_teledoc"
                        android:textColor="@color/textColorBase"
                        android:textSize="@dimen/text_size"
                        android:textStyle="bold"
                        font:name="Label"
                        font:type="bold" />

                    <com.konsula.app.ui.custom.CustomtextView
                        android:id="@+id/teledoc_doctor_name_text_view"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="10"
                        android:text="drg. Johannes Ardiant"
                        android:textColor="@color/textColorBase"
                        android:textSize="@dimen/text_size"
                        font:name="Content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:weightSum="18">

                    <com.konsula.app.ui.custom.CustomtextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="8"
                        android:text="@string/spesialisasi"
                        android:textColor="@color/textColorBase"
                        android:textSize="@dimen/text_size"
                        android:textStyle="bold"
                        font:name="Label"
                        font:type="bold" />

                    <com.konsula.app.ui.custom.CustomtextView
                        android:id="@+id/teledoc_spesialisai_text_view"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="10"
                        android:text="Dokter Gigi"
                        android:textColor="@color/textColorBase"
                        android:textSize="@dimen/text_size"
                        font:name="Content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:weightSum="18">

                    <com.konsula.app.ui.custom.CustomtextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="8"
                        android:text="@string/waktu_teledoc1"
                        android:textColor="@color/textColorBase"
                        android:textSize="@dimen/text_size"
                        android:textStyle="bold"
                        font:name="Label"
                        font:type="bold" />

                    <com.konsula.app.ui.custom.CustomtextView
                        android:id="@+id/teledoc_time_text_view"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="10"
                        android:text="11:30 WIB"
                        android:textColor="@color/textColorBase"
                        android:textSize="@dimen/text_size"
                        font:name="Content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:weightSum="18">

                    <com.konsula.app.ui.custom.CustomtextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="8"
                        android:text="Status"
                        android:textColor="@color/textColorBase"
                        android:textSize="@dimen/text_size"
                        android:textStyle="bold"
                        font:name="Label"
                        font:type="bold" />

                    <com.konsula.app.ui.custom.CustomtextView
                        android:id="@+id/teledoc_status_name_text_view"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="10"
                        android:text="Klinik Pelangi"
                        android:textColor="@color/textColorBase"
                        android:textSize="@dimen/text_size"
                        font:name="Content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:weightSum="18">

                    <com.konsula.app.ui.custom.CustomtextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="8"
                        android:text="@string/text_keluhan"
                        android:textColor="@color/textColorBase"
                        android:textSize="@dimen/text_size"
                        android:textStyle="bold"
                        font:name="Label"
                        font:type="bold" />


                    <com.konsula.app.ui.custom.CustomtextView
                        android:id="@+id/teledoc_keluhan_text_view"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="10"
                        android:textColor="@color/textColorBase"
                        android:textSize="@dimen/text_size"
                        font:name="Content" />


                </LinearLayout>

                <com.konsula.app.ui.custom.CustomtextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/space_20"
                    android:gravity="center_horizontal"
                    android:text="@string/text_gallery"
                    android:textColor="@color/textColorBase"
                    android:textSize="@dimen/text_size"
                    font:name="Label"
                    font:type="bold" />


            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="@dimen/space_5"
                android:layout_marginTop="@dimen/space_10"
                android:background="@color/grey_dark" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view_image_teledoc"
                android:layout_width="match_parent"
                android:layout_height="fill_parent" />


        </LinearLayout>
    </ScrollView>
</RelativeLayout>