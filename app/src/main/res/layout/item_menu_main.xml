<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_menu_main_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:paddingTop="@dimen/space_12"
    android:gravity="center"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/item_menu_main_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/shape_rounded_grey_selector"
        android:src="@drawable/ic_umum" />

    <com.konsula.app.ui.custom.CustomtextView
        font:name="Content"
        android:id="@+id/item_menu_main_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_menu_main_icon"
        android:gravity="center"
        android:text=""
        android:maxLines="1"
        android:ellipsize="end"
        android:singleLine="true"
        android:paddingLeft="@dimen/space_5"
        android:paddingRight="@dimen/space_5"
        android:textColor="@color/textColorSecondary"
        android:textSize="@dimen/text_super_small_size" />

</LinearLayout>
