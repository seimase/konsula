<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:paddingTop="8dp">
        <LinearLayout
            android:paddingTop="@dimen/space_20"
            android:paddingBottom="@dimen/space_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.konsula.app.ui.custom.CustomtextView
                android:id="@+id/detail_item_name"
                font:name="Content"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="@dimen/text_size"
                android:textColor="@color/estore_text_color"
                android:text="@string/text_content_transaction_cancel"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/view_promo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="8dp"
            android:background="@drawable/border_bottom"/>
        <LinearLayout
            android:id="@+id/button_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:weightSum="2">

            <com.konsula.app.ui.custom.CustomtextView
                font:name="Label"
                android:id="@+id/btn_ok"
                android:layout_width="0dp"
                android:layout_height="@dimen/space_30"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/text_transaction_cancel_ok"
                android:textColor="@color/black"
                android:textSize="@dimen/space_14" />

            <RelativeLayout
                android:layout_width="1dp"
                android:background="@color/grey_xxl"
                android:layout_weight="0"
                android:layout_height="fill_parent">

                <!--<View-->
                    <!--android:layout_width="fill_parent"-->
                    <!--android:gravity="center"-->
                    <!--android:layout_marginBottom="@dimen/space_5"-->
                    <!--android:layout_marginTop="@dimen/space_7"-->
                    <!--android:foregroundGravity="center"-->
                    <!--android:layout_height="fill_parent"-->
                    <!--android:background="@color/mdtp_transparent_black" />-->
            </RelativeLayout>


            <com.konsula.app.ui.custom.CustomtextView
                font:name="Label"
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_height="@dimen/space_20"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/text_no"
                android:textColor="@color/black"
                android:textSize="@dimen/space_14" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>