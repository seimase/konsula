<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/contact_us_header_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/close_action_contact_us_image_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:background="@android:color/transparent"
            android:padding="@dimen/space_10"
            android:src="@drawable/ic_action_back" />

        <com.konsula.app.ui.custom.CustomtextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/contactus"
            android:textColor="@color/white"
            android:textSize="@dimen/toolbar_text_size"
            android:textStyle="bold"
            font:name="Label" />
    </RelativeLayout>

    <com.konsula.app.ui.custom.CustomButton
        android:id="@+id/send_contact_us_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/contact_us_header_container"
        android:layout_alignParentBottom="true"
        android:background="@color/red_deep"
        android:padding="@dimen/space_10"
        android:text="@string/kirim"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size"
        android:textStyle="bold"
        font:name="Label"
        font:type="bold" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/send_contact_us_button"
        android:layout_below="@+id/contact_us_header_container"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_above="@id/send_contact_us_button"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="@dimen/space_20">

            <com.konsula.app.ui.custom.CustomtextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_20"
                android:layout_marginLeft="@dimen/space_16"
                android:layout_marginRight="@dimen/space_16"
                android:text="PT. Konsula Amarta Nusantara"
                android:textColor="@color/textColorBase"
                android:textSize="@dimen/text_size"
                android:textStyle="bold"
                font:name="Header"
                font:type="bold" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_10"
                android:orientation="vertical">

                <com.konsula.app.ui.custom.CustomtextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_16"
                    android:layout_marginRight="@dimen/space_16"
                    android:text="Ruko Puri Mansion Blok A No. 57\nJl.Lingkar Luar Barat, Puri Kembangan\nJakarta Barat 11610, Indonesia"
                    android:textColor="@color/textColorBase"
                    android:textSize="@dimen/text_size"
                    font:name="Label" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/tvSeeMap"
                android:layout_marginTop="@dimen/space_10"
                android:layout_width="@dimen/space_100"
                android:layout_height="@dimen/space_40">

                <com.konsula.app.ui.custom.CustomtextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/space_20"
                    android:layout_marginLeft="@dimen/space_16"
                    android:layout_marginRight="@dimen/space_16"
                    android:text="@string/lihat_peta"
                    android:textColor="@color/textColorBase"
                    android:textSize="@dimen/text_size"
                    android:textStyle="bold"
                    font:name="Label"
                    font:type="bold" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_20"
                android:layout_marginLeft="@dimen/space_16"
                android:layout_marginRight="@dimen/space_16"
                android:orientation="vertical">

                <com.konsula.app.ui.custom.CustomtextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Tel. +62 811 826 452"
                    android:textColor="@color/textColorBase"
                    android:textSize="@dimen/text_size"
                    font:name="Content" />

                <com.konsula.app.ui.custom.CustomtextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="ask@konsula.com"
                    android:textColor="@color/textColorBase"
                    android:textSize="@dimen/text_size"
                    font:name="Content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/etFullname"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/space_10"
                    android:layout_marginLeft="@dimen/space_16"
                    android:layout_marginRight="@dimen/space_16"
                    android:background="@color/soft_grey"
                    android:hint="@string/hint_nama"
                    android:padding="@dimen/space_10"
                    android:textColor="@color/textColorBase"
                    android:textSize="@dimen/text_size" />

                <EditText
                    android:id="@+id/etEmail"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/space_10"
                    android:layout_marginLeft="@dimen/space_16"
                    android:layout_marginRight="@dimen/space_16"
                    android:background="@color/soft_grey"
                    android:hint="@string/email"
                    android:inputType="textEmailAddress"
                    android:padding="@dimen/space_10"
                    android:textColor="@color/textColorBase"
                    android:textSize="@dimen/text_size" />

                <EditText
                    android:id="@+id/etPhone"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/space_10"
                    android:layout_marginLeft="@dimen/space_16"
                    android:layout_marginRight="@dimen/space_16"
                    android:background="@color/soft_grey"
                    android:hint="@string/hint_notel"
                    android:inputType="phone"
                    android:padding="@dimen/space_10"
                    android:textColor="@color/textColorBase"
                    android:textSize="@dimen/text_size" />


                <EditText
                    android:id="@+id/etMessage"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_marginLeft="@dimen/space_16"
                    android:layout_marginRight="@dimen/space_16"
                    android:background="@color/soft_grey"
                    android:gravity="top"
                    android:hint="@string/pesan"
                    android:minLines="5"
                    android:padding="@dimen/space_10"
                    android:textColor="@color/textColorBase"
                    android:textSize="@dimen/text_size" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</RelativeLayout>
