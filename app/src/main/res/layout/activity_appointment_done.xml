<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/about_us_header_container_relative_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/pink"
                android:minHeight="?attr/actionBarSize">

                <ImageButton
                    android:id="@+id/appointment_done_image_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:background="@android:color/transparent"
                    android:padding="@dimen/space_10"
                    android:src="@drawable/ic_close"  />

                <com.konsula.app.ui.custom.CustomtextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_horizontal"
                    android:text="@string/title_reservation_done"
                    android:textColor="@color/white"
                    android:textSize="@dimen/toolbar_text_size"
                    font:name="Label" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_below="@id/about_us_header_container_relative_layout"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/space_20"
                android:gravity="center"
                android:orientation="vertical">

                <com.konsula.app.ui.custom.CustomtextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="@string/text_terima_kasih"
                    android:textColor="@color/textColorBase"
                    android:textSize="@dimen/title_size"
                    android:textStyle="bold"
                    font:name="Label" />

                <com.konsula.app.ui.custom.CustomtextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="@string/directory_text_reservation"
                    android:textColor="@color/textColorBase"
                    android:textSize="@dimen/text_size"
                    font:name="Label" />

                <ImageView
                    android:id="@+id/appointment_avatar_image_view"
                    android:layout_width="@dimen/profile_width"
                    android:layout_height="@dimen/profile_height"
                    android:layout_gravity="center"
                    android:padding="@dimen/space_10"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:layout_width="@dimen/booking_info_width"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <com.konsula.app.ui.custom.CustomtextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/dokter"
                            android:textColor="@color/textColorBase"
                            android:textSize="@dimen/text_size"
                            android:textStyle="bold"
                            font:name="Label"
                            font:type="bold" />

                        <com.konsula.app.ui.custom.CustomtextView
                            android:id="@+id/appointment_doctor_name_text_view"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:textColor="@color/textColorBase"
                            android:textSize="@dimen/text_size"
                            font:name="Content" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <com.konsula.app.ui.custom.CustomtextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/tanggal"
                            android:textColor="@color/textColorBase"
                            android:textSize="@dimen/text_size"
                            android:textStyle="bold"
                            font:name="Label"
                            font:type="bold" />

                        <com.konsula.app.ui.custom.CustomtextView
                            android:id="@+id/appointment_date_text_view"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:textColor="@color/textColorBase"
                            android:textSize="@dimen/text_size"
                            font:name="Content" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <com.konsula.app.ui.custom.CustomtextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/jam"
                            android:textColor="@color/textColorBase"
                            android:textSize="@dimen/text_size"
                            android:textStyle="bold"
                            font:name="Label"
                            font:type="bold" />

                        <com.konsula.app.ui.custom.CustomtextView
                            android:id="@+id/appointment_time_text_view"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:textColor="@color/textColorBase"
                            android:textSize="@dimen/text_size"
                            font:name="Content" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <com.konsula.app.ui.custom.CustomtextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/hint_alamat"
                            android:textColor="@color/textColorBase"
                            android:textSize="@dimen/text_size"
                            android:textStyle="bold"
                            font:name="Label"
                            font:type="bold" />

                        <com.konsula.app.ui.custom.CustomtextView
                            android:id="@+id/appointment_practice_name_text_view"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:textColor="@color/textColorBase"
                            android:textSize="@dimen/text_size"
                            font:name="Content" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/textColorBase"
                            android:textSize="@dimen/text_size"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:orientation="vertical">

                            <com.konsula.app.ui.custom.CustomtextView
                                android:id="@+id/appointment_practice_address_text_view"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/textColorBase"
                                android:textSize="@dimen/text_size"
                                font:name="Content" />

                            <com.konsula.app.ui.custom.CustomtextView
                                android:id="@+id/appointment_btn_map"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/space_10"
                                android:text="@string/lihat_peta"
                                android:textColor="@color/textColorBase"
                                android:textSize="@dimen/text_size"
                                android:textStyle="bold"
                                font:name="Label"
                                font:type="bold" />
                        </LinearLayout>


                    </LinearLayout>

                    <com.konsula.app.ui.custom.CustomtextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/space_20"
                        android:gravity="center_horizontal"
                        android:text="@string/hint_kodeappoitment"
                        android:textColor="@color/textColorBase"
                        android:textSize="@dimen/text_size"
                        font:name="Label"
                        font:type="bold" />


                </LinearLayout>

                <com.konsula.app.ui.custom.CustomEditText
                    android:id="@+id/appointment_done_code_edit_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/space_10"
                    android:layout_marginTop="@dimen/space_10"
                    android:background="@color/soft_grey"
                    android:enabled="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:paddingBottom="@dimen/space_5"
                    android:paddingLeft="@dimen/space_60"
                    android:paddingRight="@dimen/space_60"
                    android:textColor="@color/red_deep"
                    android:textSize="@dimen/title_size"
                    font:name="Label" />

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="@dimen/space_10"
                    android:src="@drawable/ic_logo2" />

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>