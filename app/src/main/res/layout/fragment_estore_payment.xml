<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.konsula.app.ui.activity.estore.EstorePaymentSelectionStore">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="44dp">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:padding="16dp">
                <com.konsula.app.ui.custom.CustomtextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_medium"
                    android:layout_gravity="center"
                    android:textColor="@color/estore_text_color"
                    font:name="Label"
                    android:text="@string/estore_amount_should_be_paid"/>
                <com.konsula.app.ui.custom.CustomtextView
                    android:id="@+id/txt_grand_total"
                    font:type="bold"
                    font:name="Label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="28sp"
                    android:gravity="center"
                    android:padding="4dp"
                    android:textColor="@color/estore_text_color"
                    android:background="@drawable/border_bottom"
                    android:text="IDR 799.500"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:padding="4dp">
                    <com.konsula.app.ui.custom.CustomtextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_medium"
                        android:textColor="@color/estore_text_color"
                        font:name="Label"
                        android:text="@string/estore_remaining_payment_time"/>
                    <com.konsula.app.ui.custom.CustomtextView
                        font:type="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_medium"
                        android:layout_marginLeft="4dp"
                        android:textColor="@color/estore_text_color"
                        font:name="Label"
                        android:text="04:36:00"/>
                </LinearLayout>
                <com.konsula.app.ui.custom.CustomtextView
                    font:type="bold"
                    font:name="Label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_medium"
                    android:padding="8dp"
                    android:layout_gravity="center"
                    android:textColor="@color/colorPrimaryEstore"
                    android:text="@string/estore_see_details"
                    android:clickable="true"
                    android:onClick="seeDetail"/>
            </LinearLayout>
        </FrameLayout>
        <ListView
            android:id="@+id/list_payment"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/border_top"/>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/border_top_light_gray"
        android:clickable="true"
        android:onClick="nextStep">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="10dp"
            android:paddingRight="16dp"
            android:paddingBottom="10dp"
            android:paddingLeft="16dp"
            android:background="@color/white">
            <com.konsula.app.ui.custom.CustomtextView
                font:name="Label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/estore_text_color"
                android:text="@string/estore_continue"/>
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:tint="@color/colorPrimaryEstore"
                android:layout_gravity="right|center"
                android:src="@drawable/arrow"/>
        </FrameLayout>
    </FrameLayout>
</FrameLayout>