<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:CircleIndicator="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context="com.konsula.app.ui.activity.estore.EstoreMainActivity">

    <RelativeLayout
        android:id="@+id/rlEstore"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/colorPrimaryEstore"
        android:orientation="horizontal"
        android:padding="@dimen/space_10">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_action_back" />

        <com.konsula.app.ui.custom.CustomtextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/text_estore"
            android:textColor="@color/white"
            android:textSize="@dimen/toolbar_text_size"
            font:name="Label" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/image_logo"
        android:layout_width="fill_parent"
        android:background="@color/colorPrimaryEstore"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlEstore"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:layout_gravity="center"
            android:background="@color/colorPrimaryDark"
            android:scaleType="centerInside"
            android:src="@drawable/ic_estore" />



    </LinearLayout>
    <LinearLayout
        android:id="@+id/contentLayoutTeledokter"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:layout_below="@+id/image_logo"
        android:layout_marginBottom="@dimen/space_20"
        android:background="@color/white"
        android:gravity="left"
        android:orientation="vertical"
        android:padding="@dimen/space_10">

        <com.konsula.app.ui.custom.CustomtextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_20"
            android:text="@string/welcome_estore_soon"
            android:layout_marginBottom="@dimen/space_5"
            android:textColor="@color/colorPrimaryEstore"
            android:textSize="@dimen/title_size"
            font:name="Header" />

        <com.konsula.app.ui.custom.CustomtextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_20"
            android:text="@string/estore_soon_content"
            android:layout_marginRight="@dimen/space_20"
            android:textColor="@color/black"
            android:textSize="@dimen/text_small_size"
            font:name="Content" />

    </LinearLayout>

</RelativeLayout>
