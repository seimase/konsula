<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingTop="@dimen/space_10"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.konsula.app.doctorReviewActivity"
    tools:showIn="@layout/activity_doctor_review">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="@dimen/space_10"
                android:layout_weight="3"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/space_10"
                android:paddingRight="@dimen/space_5">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/space_5"
                        android:paddingTop="@dimen/space_5"
                        android:weightSum="13">

                        <com.konsula.app.ui.custom.CustomtextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="9"
                            android:text="@string/text_review_nilai"
                            android:textColor="@color/textColorBase"
                            android:textSize="@dimen/text_size"
                            android:textStyle="bold"
                            font:name="Label"
                            font:type="bold"/>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="@dimen/space_20"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="6"
                            android:gravity="left">

                            <RatingBar
                                android:id="@+id/doctor_rating_bar1"
                                android:layout_width="wrap_content"
                                android:layout_height="15dp"
                                android:isIndicator="true"
                                android:numStars="5"
                                android:progressDrawable="@drawable/ratingstar"
                                android:rating="3.5" />
                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/space_5"
                        android:paddingTop="@dimen/space_5"
                        android:weightSum="13">

                        <com.konsula.app.ui.custom.CustomtextView
                            font:name="Label"
                            font:type="bold"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="9"
                            android:text="@string/text_review_keramahan"
                            android:textColor="@color/textColorBase"
                            android:textSize="@dimen/text_size" />

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="@dimen/space_20"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="6"
                            android:gravity="left">

                            <RatingBar
                                android:id="@+id/doctor_rating_bar2"
                                android:layout_width="wrap_content"
                                android:layout_height="15dp"
                                android:isIndicator="true"
                                android:numStars="5"
                                android:progressDrawable="@drawable/ratingstar"
                                android:rating="3.5" />
                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/space_5"
                        android:paddingTop="@dimen/space_5"
                        android:weightSum="13">

                        <com.konsula.app.ui.custom.CustomtextView
                            font:name="Label"
                            font:type="bold"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="9"
                            android:text="@string/text_review_kebersihan"
                            android:textColor="@color/textColorBase"
                            android:textSize="@dimen/text_size" />

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="@dimen/space_20"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="4"
                            android:gravity="left">

                            <RatingBar
                                android:id="@+id/doctor_rating_bar3"
                                android:layout_width="wrap_content"
                                android:layout_height="15dp"
                                android:isIndicator="true"
                                android:numStars="5"
                                android:progressDrawable="@drawable/ratingstar"
                                android:rating="3.5" />
                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/space_5"
                        android:paddingTop="@dimen/space_5"
                        android:weightSum="13">

                        <com.konsula.app.ui.custom.CustomtextView
                            font:name="Label"
                            font:type="bold"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="9"
                            android:text="@string/text_review_waktu"
                            android:textColor="@color/textColorBase"
                            android:textSize="@dimen/text_size" />

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="@dimen/space_20"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="6"
                            android:gravity="left">

                            <RatingBar
                                android:id="@+id/doctor_rating_bar4"
                                android:layout_width="wrap_content"
                                android:layout_height="15dp"
                                android:isIndicator="true"
                                android:numStars="5"
                                android:progressDrawable="@drawable/ratingstar"
                                android:rating="3.5" />
                        </RelativeLayout>

                    </LinearLayout>



                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/grey_dark"
                android:orientation="vertical" />


        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/doctor_reviews_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>