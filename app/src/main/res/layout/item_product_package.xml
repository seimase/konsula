<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/space_16"
    android:paddingRight="@dimen/space_16"
    android:paddingTop="@dimen/space_16">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_bottom_light_gray">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="108dp"
            android:paddingBottom="@dimen/space_16"
            android:orientation="vertical">
            <com.konsula.app.ui.custom.CustomtextView
                android:id="@+id/txt_product_package_name"
                font:type="bold"
                font:name="Label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/space_14"
                android:textColor="@color/estore_text_color"
                android:text="Paket 1: Rongga Atas"/>
            <com.konsula.app.ui.custom.CustomtextView
                android:id="@+id/txt_product_package_description"
                font:name="Content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_4"
                android:textSize="@dimen/text_small_size"
                android:textColor="@color/estore_text_color"/>
            <com.konsula.app.ui.custom.CustomtextView
                android:id="@+id/txt_product_package_price"
                font:name="Header_Reguler"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_4"
                android:textSize="@dimen/space_14"
                android:textColor="@color/estore_text_color"
                android:text="IDR 200.000"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="right">
            <com.konsula.app.ui.custom.CustomtextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/estore_empty_stock"
                android:id="@+id/txt_product_package_info"
                android:visibility="gone"
                font:type="bold"
                font:name="Label"
                android:textSize="@dimen/space_14"
                android:textColor="@color/red_deep" />

            <LinearLayout
                android:id="@+id/ll_product_package_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="right">
                <TextView
                    android:id="@+id/btn_product_package_min"
                    android:layout_width="@dimen/space_30"
                    android:layout_height="@dimen/space_30"
                    android:layout_marginRight="@dimen/space_4"
                    android:textSize="@dimen/text_medium"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@drawable/shape_rounded_violet"
                    android:text="-"/>
                <EditText
                    android:id="@+id/txt_product_package_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/space_30"
                    android:gravity="center"
                    android:editable="false"
                    android:minWidth="30dp"
                    android:background="@drawable/shape_rounded_soft_grey_box"
                    android:text="0"
                    android:paddingLeft="@dimen/space_10"
                    android:paddingRight="@dimen/space_10" />
                <TextView
                    android:id="@+id/btn_product_package_plus"
                    android:layout_width="@dimen/space_30"
                    android:layout_height="@dimen/space_30"
                    android:layout_marginLeft="@dimen/space_4"
                    android:textSize="@dimen/text_medium"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@drawable/shape_rounded_violet"
                    android:text="+"/>
            </LinearLayout>
        </LinearLayout>

    </FrameLayout>
</FrameLayout>