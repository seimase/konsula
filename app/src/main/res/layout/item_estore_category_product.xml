<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/greysoft">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/greysoft"
        android:paddingBottom="@dimen/space_5">
        <ImageView
            android:id="@+id/item_estore_product_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_100"
            android:scaleType="centerCrop"/>
        <com.konsula.app.ui.custom.CustomtextView
            android:id="@+id/item_estore_product_name"
            android:paddingLeft="@dimen/space_5"
            android:paddingRight="@dimen/space_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="3"
            android:paddingTop="@dimen/space_3"
            android:text="Paket Perawatan Gigi (Polishing,Stain Removal, dll) dari Klinik Gigi Dola"
            font:name="Content"
            font:type="bold"
            android:textColor="@color/black"
            android:maxLines="3"
            android:textSize="12sp"/>
        <LinearLayout
            android:layout_marginTop="@dimen/space_5"
            android:gravity="start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <RatingBar
                    android:id="@+id/item_estore_product_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="12dp"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:layout_marginLeft="@dimen/space_5"
                    android:progressDrawable="@drawable/ratingstar_small"
                    android:rating="3.5" />
            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_weight="01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/space_5"
            android:paddingRight="@dimen/space_2"
            android:gravity="center_vertical">
            <com.konsula.app.ui.custom.CustomtextView
                android:id="@+id/item_estore_product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp 75.000"
                font:name="Content"
                font:type="bold"
                android:layout_gravity="end"
                android:textColor="@color/red_deep"
                android:textSize="@dimen/space_12"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
