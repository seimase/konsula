<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:paddingTop="8dp"
        android:paddingRight="16dp"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.konsula.app.ui.custom.CustomtextView
                android:id="@+id/detail_item_name"
                font:name="Content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/text_size"
                android:textColor="@color/estore_text_color"
                android:text="@string/estore_item_2"/>
            <com.konsula.app.ui.custom.CustomtextView
                android:id="@+id/detail_item_price"
                font:name="Content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:textSize="@dimen/text_size"
                android:textColor="@color/estore_text_color"
                android:text="Paket 1: Rongga Atas"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.konsula.app.ui.custom.CustomtextView
                font:name="Content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/text_size"
                android:textColor="@color/estore_text_color"
                android:text="@string/conv_fee"/>
            <com.konsula.app.ui.custom.CustomtextView
                android:id="@+id/detail_item_confenence_fee"
                font:name="Content"
                android:layout_width="0dp"
                android:textColor="@color/red_deep"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:textSize="@dimen/text_size"
                android:text="IDR 800.000"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/view_promo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="8dp"
            android:background="@drawable/border_bottom">
            <com.konsula.app.ui.custom.CustomtextView
                font:name="Content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/text_size"
                android:textColor="@color/estore_text_color"
                android:text="@string/estore_promotion_code"/>
            <com.konsula.app.ui.custom.CustomtextView
                android:id="@+id/detail_item_promo_code"
                font:name="Content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:textSize="@dimen/text_size"
                android:textColor="@color/red_deep"
                android:text="-IDR 500"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:orientation="horizontal">
            <com.konsula.app.ui.custom.CustomtextView
                font:type="bold"
                font:name="Content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/text_size"
                android:textColor="@color/estore_text_color"
                android:text="@string/estore_total_cost"/>
            <com.konsula.app.ui.custom.CustomtextView
                android:id="@+id/detail_item_total_payment"
                font:type="bold"
                font:name="Content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:textSize="@dimen/text_size"
                android:textColor="@color/estore_text_color"
                android:text="IDR 799.500"/>
        </LinearLayout>
        <com.konsula.app.ui.custom.CustomtextView
            android:id="@+id/button_seedetail_close"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_medium"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:textColor="@color/white"
            android:paddingTop="8dp"
            android:paddingRight="16dp"
            android:paddingBottom="8dp"
            android:paddingLeft="16dp"
            android:background="@drawable/shape_rounded_violet"
            font:name="Label"
            android:gravity="center"
            android:text="@string/drawer_close"
            android:onClick="closeDetail"/>
    </LinearLayout>
</LinearLayout>