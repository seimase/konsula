<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/soft_grey"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_5"
        android:background="@color/soft_grey"
        android:orientation="vertical" />

    <RelativeLayout
        android:id="@+id/result_search_header_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey_xxl"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/result_search_page_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@color/grey_dark"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_search_doctor_page1_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/corner"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_search_doctor_page2_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/corner"
                android:textColor="@color/white"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/item_result_search_label_lokasi_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_toRightOf="@id/result_search_page_container"
            android:padding="@dimen/space_10"
            android:text=""
            android:textColor="@color/black"
            android:textSize="@dimen/text_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_result_search_lokasi_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/item_result_search_label_lokasi_text_view"
            android:text=""
            android:textColor="@color/black"
            android:textSize="@dimen/text_size" />
    </RelativeLayout>

    <HorizontalScrollView
        android:id="@+id/item_search_doctor_result_horizontal_scroll_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/main_search_result_item_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" />
    </HorizontalScrollView>
</LinearLayout>
