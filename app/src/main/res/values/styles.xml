<resources xmlns:x="http://schemas.android.com/apk/res-auto">

    <style name="MaterialTheme" parent="MaterialTheme.Base">
        <item name="alertDialogTheme">@style/AppCompatAlertDialogStyle</item>
    </style>
    <!-- Base application theme. -->
    <style name="MaterialTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>

        <item name="android:titleTextStyle">@style/ActionBar.TitleTextStyle.Custom</item>
        <item name="android:typeface">sans</item>
        <!--<item name="android:tabWidgetStyle">@style/Widget.TabWidget</item>-->

        <!-- navigation icon color -->
        <item name="colorControlNormal">@color/white</item>

        <item name="android:windowBackground">@color/window_background</item>
        <!-- color of the menu overflow icon -->
        <item name="android:textColorSecondary">@color/white</item>

    </style>

    <style name="MaterialTheme.Main" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>

        <item name="colorControlNormal">@color/grey_dark</item>
    </style>

    <style name="MaterialTheme.Register" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/register_toolbar</item>
        <item name="colorPrimaryDark">@color/register_toolbar</item>
        <item name="colorAccent">@color/register_toolbar</item>
        <item name="colorControlNormal">@color/register_toolbar</item>
    </style>

    <style name="radionbutton" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@android:color/transparent</item>
        <item name="colorControlNormal">@android:color/transparent</item>
        <item name="colorControlActivated">@android:color/transparent</item>
    </style>


    <!-- Base application Setting. -->
    <style name="MaterialTheme.Setting" parent="Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/grey_dark</item>
        <item name="colorPrimaryDark">@color/grey_dark</item>
        <item name="colorAccent">@color/grey_dark</item>

        <item name="android:titleTextStyle">@style/ActionBar.TitleTextStyle.Custom</item>
        <item name="android:typeface">sans</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="colorSwitchThumbNormal">@color/grey_dark</item>
        <item name="android:colorForeground">@color/grey_dark</item>

    </style>


    <style name="MaterialTheme.chatdirektori" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryDark">@color/purple</item>
        <item name="colorAccent">@color/purple</item>
        <item name="android:windowBackground">@color/window_background</item>
    </style>

    <style name="MaterialTheme.Estore" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryEstore</item>
        <item name="colorPrimaryDark">@color/colorPrimaryEstore</item>
        <item name="colorAccent">@color/colorPrimaryEstore</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:windowBackground">@color/window_background</item>
    </style>

    <!-- Base application Setting. -->
    <style name="MaterialTheme.direktori" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/pink</item>
        <item name="colorPrimaryDark">@color/pink</item>

        <item name="colorControlActivated">@color/pink</item>
        <!--<item name="colorAccent">@color/white</item>-->

        <!-- navigation icon color -->
        <item name="colorControlNormal">@color/pink</item>

        <!-- color of the menu overflow icon -->
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="x" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">10dp</item>
    </style>

    <!-- Base application Setting. -->
    <style name="MaterialTheme.teledokter" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/teledokter_green</item>
        <item name="colorPrimaryDark">@color/teledokter_green</item>
        <item name="colorAccent">@color/teledokter_green</item>

        <!-- navigation icon color -->
        <item name="colorControlNormal">@color/grey_xxl</item>

        <!-- color of the menu overflow icon -->
        <item name="android:textColorSecondary">@color/grey_xxl</item>
    </style>


    <style name="MaterialTheme.pembiayaan" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/pembiayaan_blue</item>
        <item name="colorPrimaryDark">@color/pembiayaan_blue</item>
        <item name="colorAccent">@color/pembiayaan_blue</item>

        <!-- navigation icon color -->
        <item name="colorControlNormal">@color/grey_xxl</item>

        <!-- color of the menu overflow icon -->
        <item name="android:textColorSecondary">@color/grey_xxl</item>
    </style>

    <style name="MaterialTheme.Book" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/pink</item>
        <item name="colorPrimaryDark">@color/pink</item>
        <item name="colorAccent">@color/pink</item>

        <item name="android:titleTextStyle">@style/ActionBar.TitleTextStyle.Custom</item>
        <item name="android:typeface">sans</item>
        <!--<item name="android:tabWidgetStyle">@style/Widget.TabWidget</item>-->
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/textColorSecondary</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="popupStyle" parent="android:Theme.Dialog">

        <item name="android:textColor">@color/black</item>

        <item name="android:background">@color/white</item>

        <item name="android:windowBackground">@android:color/transparent</item>

    </style>

    <style name="ActionBar.TitleTextStyle.Custom" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.TabWidget" parent="android:Theme">
        <item name="android:tabStripEnabled">false</item>
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/grey_dark</item>
        <item name="colorControlHighlight">@color/grey_xxl</item>
    </style>

    <style name="SpinnerColor">
        <item name="android:textColor">@color/black</item>
    </style>


