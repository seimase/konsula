    <style name="Theme.CustomTextAppearance.Design.Tab" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">@dimen/text_tab_size</item>
        <item name="android:textColor">@color/grey_xxl</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_gravity">left|center_vertical</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="Theme.CustomTextAppearance.Search.Menu.Tab" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textColor">@color/textColorHint</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_gravity">left|center_vertical</item>
        <item name="textAllCaps">true</item>
    </style>

    <!--ratingbar-->
    <style name="ratingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingstar</item>
        <item name="android:minHeight">22dip</item>
        <item name="android:maxHeight">22dip</item>
    </style>

    <!-- Transparent window style -->
    <!-- full screen -->
    <style name="Theme.CustomTranslucentFullscreen" parent="@android:style/Theme.Translucent.NoTitleBar.Fullscreen">
        <item name="android:windowAnimationStyle">@style/Window.Animation</item>
    </style>

    <!-- floating screen -->
    <style name="Theme.CustomTranslucent" parent="android:style/Theme.Translucent">
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    <!-- end transparent screen-->

    <!-- Window Animation -->
    <style name="Window.Animation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/slide_left_short</item>
        <!--<item name="android:windowExitAnimation">@anim/slide_out_right</item>-->
    </style>

    <style name="MaterialTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="MaterialTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <declare-styleable name="font">
        <attr name="type">
            <enum name="bold" value="1" />
            <enum name="italic" value="2" />
        </attr>
        <attr name="name">
            <enum name="Header" value="1" />
            <enum name="Header_Reguler" value="2" />
            <enum name="Content" value="3" />
            <enum name="Label" value="4" />
            <enum name="Klavika" value="5" />
            <enum name="Roboto" value="6" />
        </attr>
    </declare-styleable>

    <declare-styleable name="UnderlinedTextView">
        <attr name="underlineWidth" format="dimension" />
        <attr name="underlineColor" format="color" />
    </declare-styleable>

    <style name="FacebookLoginButton">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:background">@drawable/facebook_shape</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="CustomTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionMenuTextColor">#ffffff</item>
        <item name="android:datePickerStyle">@android:style/Widget.DatePicker</item>
    </style>

    <style name="SwitchTextAppearance" parent="@android:style/TextAppearance.Holo.Small">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:startColor">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:switchTextAppearance">@color/white</item>
    </style>

    <!--facebook-->
    <style name="FullyTranslucent" parent="android:Theme.Translucent.NoTitleBar">
        <item name="android:progressBarStyle">@style/InvisibleProgress</item>
    </style>

    <style name="InvisibleProgress">
        <item name="android:visibility">gone</item>
    </style>

    <style name="ThemeTranslucentPickers" parent="android:Theme.Holo.Light.Dialog.NoActionBar">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
</resources>